<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--   NEW SCROLL VIEW-->
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF0D6"
            android:orientation="vertical">
            <!--   START OF TITLE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Art in Island"
                    android:textColor="#EE7469"
                    android:textSize="35sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
            <!--  END OF TITLE -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/artt">

                <RelativeLayout
                    android:id="@+id/hiders"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:background="#EE7469"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/p1"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="35dp"
                        android:background="#FFF0D6"
                        android:onClick="p1"
                        android:text="Wildlife Mini Zoo"
                        android:textColor="#EE7469" />

                    <Button
                        android:id="@+id/p2"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_alignStart="@+id/p1"
                        android:layout_below="@+id/p1"
                        android:layout_marginTop="10dp"
                        android:background="#FFF0D6"
                        android:onClick="p2"
                        android:text="La Mesa Ecopark"
                        android:textColor="#EE7469" />

                    <Button
                        android:id="@+id/p3"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_alignStart="@+id/p2"
                        android:layout_below="@+id/p2"
                        android:layout_marginTop="10dp"
                        android:background="#FFF0D6"
                        android:onClick="p3"
                        android:text="Vargas Museuem"
                        android:textColor="#EE7469" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Suggested Places"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#383732"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"

                    android:background="#383732"
                    android:orientation="horizontal">
                    <!--  ADDED THIS    android:layout_gravity="bottom"  -->
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:rating="4.6"
                        android:scaleX=".5"
                        android:scaleY=".5" />
                </LinearLayout>
                <!--QUEZONMEMORIALCIRCLE -->
            </LinearLayout>


            <!--   START NEW SCROLL VIEW-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="About"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#383732"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/textView"
                        android:layout_toRightOf="@+id/textView"
                        android:text="3D Art Museum, opens to public TUESDAYS-SUNDAYS and HOLIDAYS \nfrom 09:30AM to 09:30PM."
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:textColor="#383732" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginLeft="10dp"
                    android:text="Contact"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#383732"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="(02) 421 1356"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:textColor="#383732" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView4"
                    android:layout_marginLeft="10dp"
                    android:text="Address"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#383732"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_toEndOf="@+id/textView"
                        android:layout_toRightOf="@+id/textView"
                        android:text="175 15th Ave., Brgy. Socorro,Quezon City, Philippines"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:textColor="#383732" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView4"
                    android:layout_marginLeft="10dp"
                    android:text="Rates :"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#383732"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_toEndOf="@+id/textView"
                        android:layout_toRightOf="@+id/textView"
                        android:text="Entrance Fee : Php 500 for Adult.\nStudents, Senior Citizens and PWD's get a discount of Php 100, just bring valid ID."
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:textColor="#383732" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView4"
                    android:layout_marginLeft="10dp"
                    android:text="Prohibited Items :"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#383732"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_toEndOf="@+id/textView"
                        android:layout_toRightOf="@+id/textView"
                        android:text="Foods and drinks , tripod and Pets."
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:textColor="#383732" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView4"
                    android:layout_marginLeft="10dp"
                    android:text="What to Bring ?"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#383732"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_toEndOf="@+id/textView"
                        android:layout_toRightOf="@+id/textView"
                        android:text="Camera, Jacket, Friend, Socks"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:textColor="#383732" />
                </LinearLayout>



                <!--BUtton-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <Button
                            android:id="@+id/ad"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/hiders"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/border"
                            android:onClick="artadd"
                            android:text="Add Destination"
                            android:textColor="#EE7469" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                        <Button
                            android:id="@+id/button2"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/ad"
                            android:onClick="artdelete"
                            android:background="@drawable/border"
                            android:text="Delete Destination"
                            android:textColor="#EE7469" />
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
        </LinearLayout>     <!--  END NEW LINEARLAYOUT -->
    </ScrollView>     <!-- END NEW SCROLL VIEW-->

</LinearLayout>

