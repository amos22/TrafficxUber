<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sumo.traffic.radiusplace"
    android:background="#FFF0D6">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:background="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is where you set your own radius where you can minimize and maximize the places that you want to show in the Map."
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:textColor="#383732"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="10  = 10 meters"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="100  = 100 meters"
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="1000  = 1000 meters"
        android:id="@+id/textView8"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:textColor="#000"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Radius:"
        android:id="@+id/textView9"
        android:textColor="#EE7469"
        android:textSize="30dp"
        android:inputType="number"
        android:layout_alignBottom="@+id/editText3"
        android:layout_toStartOf="@+id/editText3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Adjust the radius"
        android:id="@+id/button3"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"

        android:onClick="adjust" />

</RelativeLayout>
